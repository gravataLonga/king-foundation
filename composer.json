{
    "name": ":vendor/:package_name",
    "type": "library",
    "description": ":package_description",
    "keywords": [
        ":vendor",
        ":package_name"
    ],
    "homepage": "https://github.com/:vendor/:package_name",
    "license": "MIT",
    "authors": [
        {
            "name": ":author_name",
            "email": ":author_email",
            "homepage": ":author_website",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.2",
        "friendsofphp/php-cs-fixer": "^3.3",
        "phpunit/phpunit": "^9",
        "infection/infection": "^0.25.4"
    },
    "autoload": {
        "psr-4": {
            ":vendor\\:package_name\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "phpstan": "phpstan analyze -l max src",
        "fix-style": "php-cs-fixer src tests",
        "test": "XDEBUG_MODE=coverage phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
